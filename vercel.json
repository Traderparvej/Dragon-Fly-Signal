{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "signal.html", "use": "@vercel/static" },
    { "src": "api/login.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },

    /* Rewrite: /signal → signal.html */
    { "src": "/signal", "dest": "/signal.html" },

    /* Redirect: signal.html → /signal (URL clean) */
    { "src": "/signal\\.html", "status": 301, "headers": { "Location": "/signal" } }
  ]
}
